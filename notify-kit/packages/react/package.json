{
  "name": "@notify-kit/react",
  "version": "1.0.0",
  "description": "React hooks for NotifyKit dual-path notification system",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit",
    "test": "echo 'No tests yet'"
  },
  "dependencies": {
    "@notify-kit/core": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "firebase": "^10.0.0"
  },
  "peerDependenciesMeta": {
    "firebase": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "react",
    "hooks",
    "notifications",
    "pwa"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/waseemsadiq/notify-kit.git",
    "directory": "packages/react"
  }
}
