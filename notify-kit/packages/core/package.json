    "firebase": "^10.0.0"
  },
  "peerDependenciesMeta": {
    "firebase": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "firebase": "^10.7.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "notifications",
    "indexeddb",
    "firebase",
    "pwa"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/waseemsadiq/notify-kit.git",
